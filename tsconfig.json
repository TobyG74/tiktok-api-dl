{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "ESNext.Array", "DOM"],
    "module": "node16",
    "moduleResolution": "node16",
    "noImplicitThis": true,
    "outDir": "lib",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "declaration": true,
    "target": "ES2020"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
